<%- [:notice, :info, :warning, :error, :alert].each do |kind| -%>
  <%- next if flash[kind].blank? -%>
  <%
    alert_type = case kind
      when :notice
        'success'
      when :error
        'danger'
      when :info
        'info'
      when :warning, :alert
        'warning'
      end
  %>
    <%-  margin = 'margin-top: 10px;' -%>
    <div class="row" style="<%= "#{margin}" %>">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="alert alert-dismissable alert-<%= alert_type %> notice fade in">
          <button class="close" data-dismiss="alert" type="button"><span class="glyphicon glyphicon-remove resize-flash-close"></span></button>
          <% [flash[kind]].flatten.each do |line| %>
            <div><%= line.html_safe %></div>
          <% end %>
        </div>
      </div>
    </div>


<%- end -%>
